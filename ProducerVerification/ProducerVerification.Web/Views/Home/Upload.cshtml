@model ProducerVerification.Web.Models.ProducerUserInfo

@{
    ViewBag.Title = "Producer User Information";
}

<div class="row">
    @*<div class="spacer-15px"></div>*@
    <img src="https://stylehub.ncjua-nciua.org/Content/Images/logo_NoAtoms_ProducerVerification.png" />
    <div class="greyLine"></div>
    <div class="spacer-40px"></div>
</div>

@if (TempData["error"] != null)
{
    <div class="alert alert-success">
        <code>@TempData["error"]</code>
    </div>
}

@using (Html.BeginForm("Upload", "Home", FormMethod.Post, new { @class = "sky-form", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.ProducerCode)
    <fieldset>
        <div class="row">
            <div class="col-md-6">
                <div class="form-horizontal">
                    <div class="form-group">
                        <br />
                        @Html.Label("fileDownload", "Click here to download the Excel file.")<br />
                        @Html.ActionLink("Download", "Download")
                        <br /><br />
                        @Html.Label("fileUpload", "Upload your completed spreadsheet here.")
                        @Html.Editor("fileUpload", new { htmlAttributes = new { @type = "file" } })
                        <br />
                        <input type="submit" class="btn btn-blue2C7" value="Upload File" />
                    </div>
                </div>
            </div>
            <div class="col-md-6"></div>
        </div>
    </fieldset>
}
<div class="spacer-20px"></div>